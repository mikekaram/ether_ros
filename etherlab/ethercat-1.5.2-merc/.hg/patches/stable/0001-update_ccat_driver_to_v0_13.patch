+static ssize_t ccat_sram_read(struct file *const f, char __user * buf,
+			      size_t len, loff_t * off)
+{
+	struct cdev_buffer *buffer = f->private_data;
+	const size_t iosize = buffer->ccdev->iosize;
+
+	if (*off >= iosize) {
+		return 0;
+	}
+
