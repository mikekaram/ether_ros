+    req->next = NULL;
+    req->config = sc;
+    req->index = data.request_index;
+    req->sdo_index = data.sdo_index;
+    req->sdo_subindex = data.sdo_subindex;
+    req->data_size = size;
+    req->mem_size = size;
+
+    ec_slave_config_add_sdo_request(sc, req);
+
+    return req;
