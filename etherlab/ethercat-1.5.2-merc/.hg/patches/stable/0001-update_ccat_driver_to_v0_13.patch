+	struct cdev_buffer *const buffer = f->private_data;
+
+	if (*off + len > buffer->ccdev->iosize) {
+		return 0;
+	}
+
+	if (copy_from_user(buffer->data, buf, len)) {
+		return -EFAULT;
+	}
