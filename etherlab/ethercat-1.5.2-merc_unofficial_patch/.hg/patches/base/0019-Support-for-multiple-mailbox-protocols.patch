+/*****************************************************************************/
+
+/** Free internal memory for mailbox response data.
+ *
+ */
+void ec_mbox_data_clear(
+        ec_mbox_data_t *mbox_data /**< Mailbox response data. */
+        )
+{
+    if (mbox_data->data) {
+        kfree(mbox_data->data);
+        mbox_data->data = NULL;
+        mbox_data->data_size = 0;
+    }
+}
+
