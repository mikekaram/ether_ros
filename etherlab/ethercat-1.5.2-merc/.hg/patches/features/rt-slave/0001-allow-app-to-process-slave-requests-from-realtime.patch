+        ec_master_t *master, /**< EtherCAT master. */
+        unsigned int rt_slave_requests /**< if \a True, slave requests are
+                                       to be handled by calls to 
+                                      ecrt_master_exec_requests() from
+                                      the applications realtime context. */
+        );
